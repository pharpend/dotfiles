# Tipo de letra por defecto.
use_xft yes
xftfont Droid Sans:size=9
override_utf8_locale yes

# Configuración de rendimiento.
update_interval 1
total_run_times 0
double_buffer yes
no_buffers yes
net_avg_samples 2
text_buffer_size 1024

# Ejecutarlo en su propia ventana en lugar de usar el escritorio.
own_window yes
own_window_transparent yes
own_window_type override
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager

# Borde.
draw_borders no
border_margin 1

# Color por defecto del fondo de la ventana
own_window_colour 393834

# Color por defecto.
#default_color B7B2AD
default_color FFFFFF

# Dibuja marco.
draw_shades no

# Colores de trabajo.
#color0 DD3A21
color0 A9B7C4
# Dimensiones mínimas.
minimum_size 1440 0

# Posición de Conky.
alignment bottom_left
gap_x 0
gap_y 4

# Texto
TEXT
${image ~/.conkytheme/pix/framearchb.png -p 0,0 -s 1280x180}
