def ping_speed
  begin
    `ping -c 1 google.com | grep 64`.split("=")[-1].strip.split[0].to_f
  rescue
    "--"
  end
end

def ping_color(ps)
  case ps
    when "--"
      "#555555"
    when 0..30
      "#60f040"
    when 30..50
      "#d0f040"
    when 50..70
      "#f0d040"
    else
      "#f00000"
  end
end

def battery_pcts
  `acpi -b`.split("\n")
end

def battery_color(pct)
  case pct[1].to_i
    when 90..100
      "#50f040"
    when 80..89
      "#70e040"
    when 70..79
      "#c0e040"
    when 60..69
      "#e0e040"
    when 50..59
      "#f0c040"
    when 40..49
      "#e09040"
    when 30..39
      "#f05020"
    when 20..29
      "#f02020"
    when 10..19
      "#d02040"
    when 0..9
      "#f00020"
  end
end

